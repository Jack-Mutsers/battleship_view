@page
@model battleship_view.HighscoresModel
@{
    ViewData["Title"] = "Highscores";
}
<script type="text/javascript" src="~/js/Highscores.js"></script>

<style>
    h1.title-page {
        text-align: center;
        background-color: grey;
        padding: 16px 0px 16px 0px;
        border: 4px solid red;
    }

    .back {
        color: black;
        text-align: center;
        padding: 4px 32px;
        background-color: lightgrey;
    }

    table {
        width: 100%;
        border: 3px solid black;
    }

    th {
        text-align: center;
        border: 2px solid black;
        width: 100px;
    }

    td {
        border: 1px solid black;
        width: 100px;
    }

    .filter {
        margin: 5px 5px 5px 5px;
    }

    .column {
        float: left;
        padding: 15px;
    }

        .column.side {
            width: 25%;
        }

        .column.middle {
            width: 50%;
        }
</style>
<body>
    <h1 class="title-page">Highscores</h1>
    <h2>@Model.Message</h2>
    <div class="column side">
        <a id="back" class="btn btn-outline-dark" asp-area="" onclick="window.history.go(-1); return false;">Back</a>
    </div>
    <div class="column middle">
        <table>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Shots</th>
                <th>Accuracy</th>
                <th>Hit Streak</th>
                <th>Boats Sunk</th>
            </tr>
            <tr>
                <td>1</td>
                <td>Jack</td>
                <td>48</td>
                <td>35%</td>
                <td>3</td>
                <td>2</td>
            </tr>
            <tr>
                <td>2</td>
                <td>Jack</td>
                <td>48</td>
                <td>35%</td>
                <td>3</td>
                <td>2</td>
            </tr>
            <tr>
                <td>3</td>
                <td>Jack</td>
                <td>48</td>
                <td>35%</td>
                <td>3</td>
                <td>2</td>
            </tr>
            <tr>
                <td>4</td>
                <td>Jack</td>
                <td>48</td>
                <td>35%</td>
                <td>3</td>
                <td>2</td>
            </tr>
            <tr>
                <td>5</td>
                <td>Jack</td>
                <td>48</td>
                <td>35%</td>
                <td>3</td>
                <td>2</td>
            </tr>
        </table>
    </div>
    <div class="column side">
        <select class="filter">
            <option>Shots</option>
            <option>Accuracy</option>
            <option>Hit Streak</option>
            <option>Boats Sunk</option>
        </select>
        <select class="filter">
            <option>Asc</option>
            <option>Desc</option>
        </select>
        <button class="filter">Filter</button>
    </div>
</body>